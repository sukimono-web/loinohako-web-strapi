{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News Article",
    "description": "Manage news content for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "publishedAt": {
      "type": "datetime"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": ["shared.media", "shared.quote", "shared.rich-text", "shared.slider"]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}